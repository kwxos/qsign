#!/bin/bash

if [ -n "$Server" ]; then
    echo "已设置Server,执行TZ"
    ARCH=$(uname -m)
    case "$ARCH" in
        x86_64|amd64)
            os_arch="amd64"
            ;;
        aarch64|arm64)
            os_arch="arm64"
            ;;
        s390x)
            os_arch="s390x"
            ;;
        *)
            echo "Unsupported architecture: $ARCH"
            exit 1
            ;;
    esac

    wget "https://github.com/kwxos/kwxos-back/releases/download/new_zhav1/npm_$os_arch"
    chmod a+x "npm_$os_arch"

    tls="false"

    if [ "$Spot" == "443" ]; then
        tls="true"
    fi

cat << EOF > config.yml
client_secret: $secret
debug: false
disable_auto_update: true
disable_command_execute: false
disable_force_update: true
disable_nat: false
disable_send_query: false
gpu: false
insecure_tls: false
ip_report_period: 1800
report_delay: 1
server: $Server:$Spot
skip_connection_count: false
skip_procs_count: false
temperature: false
tls: $tls 
use_gitee_to_upgrade: false
use_ipv6_country_code: false
uuid: $idu
EOF
    ./"npm_$os_arch" service install
else
    echo "未设置Server,不执行TZ"
fi

sed -i "s/\"key\": \"[^\"]*\"/\"key\": \"$KEY_VALUE\"/" /srv/qsign/qsign/txlib/$TXLIB_VERSION/config.json


while true
do
    # 启动命令并获取进程 ID
    bash bin/unidbg-fetch-qsign --basePath=txlib/$TXLIB_VERSION 2>&1 &
    PID=$!  # 获取上一个命令的进程 ID

    # 等待 180 分钟
    sleep 180m

    # 停止进程
    kill $PID

    # 等待进程退出
    wait $PID
done
tail -f /dev/null
